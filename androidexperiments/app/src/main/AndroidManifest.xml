<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for all experiments -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Exp 6 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Exp 6,10 -->
    <uses-permission android:name="android.permission.READ_SMS" /> <!-- Exp 7 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" /> <!-- Exp 7 -->
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- Exp 7 -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- Exp 8,9 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- Exp 8,9 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /> <!-- Exp 8,9 (API 31+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" /> <!-- Exp 8,9 (API 31+) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- Exp 8,9,10,11 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- Exp 11 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- Exp 10 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- Exp 10 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Exp 4,13 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Exp 4 (legacy) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Exp 4 (legacy) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- Exp 14 -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.bluetooth" android:required="false" />
    <uses-feature android:name="android.hardware.location" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidexperiments">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Androidexperiments">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
